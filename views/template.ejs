<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="Content-Type" content="text/html charset=UTF-8" />
    <title>Orbit</title>
  </head>
  <style>
      .spherical-segment {
      margin:0 40px;
      text-align:center; 
      display: flex;
      flex-direction: row;
      justify-content: space-around;
    }

    .spherical-item {
      width:40px;
      height:40px;
      border-radius: 50%;
    }
  </style>
<body style="margin: 0; padding: 0; border: 0; font-size: 100%; font: inherit;">
  <p style="font-family: 'Bellefair', serif; font-weight: 400; font-style: normal; width: 370px; font-size: 47.45px; text-align: center; margin: 10px auto;">Orbit</p>
  <div style="width: 540px; position: relative; display:flex; flex-direction: column; margin: auto;">
    <div style="background-size: cover; background-image: url('https://i.ibb.co/ZN94wV7/Group-82.png'); box-sizing: border-box; width: 540px; height: 958px; position: relative;">
      <p style="margin-top: 90px; font-family: 'America-Mono-Regular'; color: gray; font-size: 16px; width: 370px; text-align: center; margin: 70px auto 20px;">THE HORIZONS</p>
      <p style="margin-top: 10px; margin-bottom: 40px; font-family: 'Bellefair', serif; font-weight: 400; width: 370px; font-size: 47.45px; text-align: center; margin: 10px auto;">Hey <%= dataObject.userName %>, hereâ€™s who's Up Next</p>
      <table style="margin-top: 30px;width:100%">
        <tbody>
          <% if (dataObject.weekly && dataObject.weekly.length > 0) { %>
          <tr>
            <td style="text-align:center" colspan="5">
              <p style="font-family:'America-Mono-Regular';color:gray;font-size:16px;width:100%;text-align:center; margin: 0px">WEEKLY</p>
            </td>
          </tr>
          <tr style="height:40px;">
            <td colspan="5">
              <div class="spherical-segment">
                <% dataObject.weekly.forEach(function(photoUrl) { %>
                <img class="spherical-item" src="<%= photoUrl %>">
                <% }); %>
              </div>
            </td>
          </tr>
          <% } %>
          <% if (dataObject.monthly && dataObject.monthly.length > 0) { %>
            <tr>
              <td style="text-align:center" colspan="5">
                <p style="font-family:'America-Mono-Regular';color:gray;font-size:16px;width:100%;text-align:center; margin: 0px">MONTHLY</p>
              </td>
            </tr>
            <tr style="height:40px">
              <td colspan="5">
                <div class="spherical-segment">
                  <% dataObject.monthly.forEach(function(photoUrl) { %>
                  <img class="spherical-item" src="<%= photoUrl %>">
                  <% }); %>
                </div>
              </td>
            </tr>
            <% } %>
            <% if (dataObject.quarterly && dataObject.quarterly.length > 0) { %>
              <tr>
                <td style="text-align:center" colspan="5">
                  <p style="font-family:'America-Mono-Regular';color:gray;font-size:16px;width:100%;text-align:center; margin: 0px">QUARTERLY</p>
                </td>
              </tr>
              <tr style="height:40px">
                <td colspan="5">
                  <div class="spherical-segment">
                    <% dataObject.quarterly.forEach(function(photoUrl) { %>
                    <img class="spherical-item" src="<%= photoUrl %>">
                    <% }); %>
                  </div>
                </td>
              </tr>
              <% } %>
              <% if (dataObject.annually && dataObject.annually.length > 0) { %>
                <tr>
                  <td style="text-align:center" colspan="5">
                    <p style="font-family:'America-Mono-Regular';color:gray;font-size:16px;width:100%;text-align:center; margin: 0px">ANNUALY</p>
                  </td>
                </tr>
                <tr style="height:40px">
                  <td colspan="5">
                    <div class="spherical-segment">
                      <% dataObject.annually.forEach(function(photoUrl) { %>
                      <img class="spherical-item" src="<%= photoUrl %>">
                      <% }); %>
                    </div>
                  </td>
                </tr>
                <% } %>
        </tbody>
      </table>
    </div>
  </div>
  <script>
window.onload = function positionImages() {

  const segments = document.querySelectorAll('.spherical-segment');


  const hardcodedMargins = {
    0: '21%', 
    1: '14%', 
    2: '14%',
    3: '15%', 
  };

  segments.forEach((segment, index) => {
    const images = segment.querySelectorAll('img');
    const numberOfImages = images.length;
  
    const arcWidth = 120; 
  
    for (let i = 0; i < numberOfImages; i++) {
      const angle = (Math.PI / (numberOfImages + 1)) * (i + 1);
      const translateY = -arcWidth * Math.sin(angle); 
      images[i].style.transform = `translateY(${translateY}%)`;

      if (hardcodedMargins.hasOwnProperty(index)) { 
        images[i].style.marginTop = hardcodedMargins[index];
      }
    }
  });
}


      </script>
</body>
</html>
